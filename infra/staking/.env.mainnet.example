# Autonomys Mainnet environment (example)
# Copy to env/mainnet.env and fill RPC_URLS if needed

# =============================================================================
# NETWORK CONFIGURATION (MAINNET)
# =============================================================================
NODE_DOCKER_TAG=latest
NETWORK_ID=mainnet
CHAIN_ID=0x66455a580aabff303720aa83adbe6c44502922251c03ba73686d5245da9e21bd

# Set one or more reliable mainnet WebSocket endpoints (comma-separated)
# RPC_URLS=wss://<your_mainnet_rpc>/ws
RPC_URLS=wss://rpc.mainnet.autonomys.xyz/ws

# Choose a safe start height (example below indexes from just before staking launch)
START_BLOCK_STAKING=3851328

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
STAKING_DB_HOST=postgres-staking
STAKING_DB_INTERNAL_PORT=5432
STAKING_DB_EXTERNAL_PORT=5433
STAKING_DB_USER=postgres
STAKING_DB_PASSWORD=postgres
STAKING_DB_DATABASE=staking

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PORT=6379
REDIS_SERVICE_HOST=redis
REDIS_SERVICE_PORT=6379

# =============================================================================
# WORKER CONFIGURATION
# =============================================================================
BATCH_SIZE=1000
QUEUE_PROCESSING_INTERVAL_MS=500
MAX_CONCURRENT_BATCHES=8
DB_POOL_SIZE=25
DB_CONNECTION_TIMEOUT_MS=3000
MAX_RETRIES=3
RETRY_DELAY_MS=5000
FINALITY_THRESHOLD=100
CHAIN_TIP_UPDATE_INTERVAL_MS=10000
CHAIN_HEAD_POLL_INTERVAL_MS=6000
DB_HEALTH_CHECK_INTERVAL_MS=30000
ENABLE_DEBUG_LOGS=false
LOG_LEVEL=info

# =============================================================================
# HASURA CONFIGURATION
# =============================================================================
HASURA_GRAPHQL_ADMIN_SECRET=devsecret
HASURA_GRAPHQL_ENABLE_CONSOLE=true
HASURA_GRAPHQL_DEV_MODE=false
HASURA_GRAPHQL_ENABLE_INTROSPECTION=false
HASURA_GRAPHQL_CORS_DOMAIN="*"
HASURA_GRAPHQL_PORT=8080

# =============================================================================
# ENVIRONMENT
# =============================================================================
NODE_ENV=production


